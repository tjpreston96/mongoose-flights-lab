<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <ul>
      <%- flight.airport.map( d => `<li>${d.airport}</li>`)%> 
  </ul>
  <div>Flight No: </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departs %></div>
</section>
<form action="/flights/<%= flight._id %>/destinations" method="POST">
    <select name="destinationId" id="">
        <%- destinations.map(d => `<option value="${d._id}">${d.airport}</option>`).join('') %> 
    </select>
    <button type="submit">Add Destination</button>
</form>
</section>
<!-- new markup below -->
<br><br><h2>Tickets</h2>
<form id="add-tickets-form" method="POST"
  action="/flights/<%= flight._id %>/tickets">
  <label>Seat:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?">
  <label>Price:</label>
  <input type="text" name="price" id="" placeholder="$...">
  <input type="submit" value="Add Ticket">
</form>

<% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
            <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(t) { %>
          <tr>
            <td><%= t.createdAt.toLocaleDateString() %></td>
            <td><%= t.seat %></td>
            <td>$<%= t.price %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Tickets Yet</h5>
  <% } %>
  
  
<%- include('../partials/footer') %>